@model UserModel
@{
    ViewData["Title"] = "User Delete confirmation";
}

<div class="text-center">
    <h3>You have sure you want to delete the user (@Model.Name)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="User" asp-action="Index">Cancel delete</a>
<a class="btn btn-danger" role="button" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" >Confirm delete</a>