@using MVCWebSite.Enums
@model UserModel
@{
    ViewData["Title"] = "Create User";
}

<div class="text-center">

    <h1 class="display-4">Create User</h1>
  
</div>

<form asp-controller="User" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name"  class="form-control" placeholder="Enter your user name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
  
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter your user email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Enter your user login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="login">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="">Choose</option>
            <option value="@ProfileEnum.Admin">Administrator</option>
            <option value="@ProfileEnum.Default">Default</option>
        </select>
        @Html.ValidationMessageFor(x => x.Profile)
    </div>

    <div class="form-group">
        <label for="login">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your user password">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <br />

    <button type="submit" class="btn btn-primary ">Add</button>
   
    <a class="btn btn-secondary " asp-controller="User" asp-action="Index">Go back</a>
</form>