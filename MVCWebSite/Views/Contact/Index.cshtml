@model List<ContactModel>
@{
    ViewData["Title"] = "Contact list";
}


<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-asp-controller="Contact" asp-action="Create">Add new contact</a>
    </div>

    <br />

    @if(TempData["SucessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["SucessMessage"]
        </div>

    }

    @if(TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["ErrorMessage"]
        </div>
    }

    <br />

    <h1 class="display-4">Contact list</h1>

    <table class="table table-dark table-striped" id="table-contacts">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col" style="text-align: center;">Name</th>
                <th scope="col" style="text-align: center;">Email</th>
                <th scope="col" style="text-align: center;">Phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (ContactModel contact in Model)
                {
                    <tr>
                        <th scope="row">@contact.Id</th>
                        <td style="text-align: center;">@contact.Name</td>
                        <td style="text-align: center;">@contact.Email</td>
                        <td style="text-align: center;">@contact.Phone</td>
                        <th>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@contact.Id" asp-asp-controller="Contact" asp-action="Edit">Edit</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contact.Id" asp-asp-controller="Contact" asp-action="DeleteConfirmation">Delete</a>
                            </div>
                        </th>
                    </tr>
                }
            }         
        </tbody>
    </table>
</div>

