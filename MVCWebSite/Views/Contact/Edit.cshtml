@model ContactModel
@{
    ViewData["Title"] = "Edit Contact";
}


<div class="text-center">

    <h1 class="display-4">Edit Contact</h1>

</div>

<form asp-controller="Contact" asp-action="Edit" method="post">
    <input type="hidden" asasp-for="Id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter your name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter your email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="phone">Mobile</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter your phone number">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <br />


    <button type="submit" class="btn btn-primary ">Edit</button>

    <a class="btn btn-secondary " asp-controller="Contact" asp-action="Index">Go back</a>
</form>